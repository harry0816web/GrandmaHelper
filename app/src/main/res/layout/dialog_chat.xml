<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <LinearLayout
        android:id="@+id/dialog_box"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialog_bg"
        android:baselineAligned="false"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="7dp">

        <!-- 標題列 -->
        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:contentDescription="logo"
                android:src="@drawable/bubble_new" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="有什麼可以幫你嗎？"
                android:textColor="#333333"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 多行輸入框 -->

        <!-- 按鈕列 -->

        <Button
            android:id="@+id/shortcut1"
            android:layout_width="287dp"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/text_bg"
            android:paddingTop="3dp"
            android:textColor="#333333"
            android:text="傳訊息給兒子" />

        <Button
            android:id="@+id/shortcut2"
            android:layout_width="287dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/text_bg"
            android:textColor="#333333"
            android:text="打電話給孫女" />

        <Button
            android:id="@+id/shortcut3"
            android:layout_width="287dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/text_bg"
            android:textColor="#333333"
            android:text="拍照並傳到家庭群組" />

        <EditText
            android:id="@+id/input_message"
            android:layout_width="287dp"
            android:layout_height="91dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:gravity="top|start"
            android:hint="在這裡輸入訊息…"
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:textColor="#333333"
            android:textColorHint="#888888" />

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center|end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:background="@drawable/button_bg"
                android:text="取消"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:background="@drawable/button_bg"
                android:text="送出"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- 可選：暫時顯示 Thinking/Debug -->
    </LinearLayout>
</FrameLayout>
